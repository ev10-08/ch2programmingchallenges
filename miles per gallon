#include <iostream>
using namespace std;

int main(){
    int tG; //total gallons
    tG = 15;
    
    int mBr; //miles driven before refueling is nessecary
    mBr = 375;
    
    cout << "The amount of miles per gallon is: "
    << mBr/tG; //miles driven before refueling divided by the total amount of gallons to calculate the amount of miles per gallon
}
